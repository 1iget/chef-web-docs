{
  "root": {
    "src": ".",
    "dest": "./.tmp"
  },

  "tasks": {
    "browserSync": {
      "proxy": "http://localhost:4567",
      "reloadDelay" : 1000,
      "files": ["./source/**/*.{slim,md,erb,html,haml}"],
      "online": true,
      "open": false
    },

    "static": {
      "src": "source/assets",
      "dest": "./"
    },

    "js": {
      "src": "lib/chef-lab-client/src",
      "dest": "assets/javascripts",
      "entries": {
        "polyfills": ["./polyfills.ts"],
        "main": ["./main.ts"]
      }
    },
    "css": {
      "src": "source/assets/stylesheets",
      "dest": "assets/stylesheets",
      "autoprefixer": {
        "browsers": ["last 3 version"]
      },
      "sass": {
        "indentedSyntax": false,
        "includePaths": [
          "./node_modules/foundation-sites/scss",
          "./node_modules/compass-mixins/lib"
        ],
        "precision": 10
      },
      "extensions": ["sass", "scss", "css"]
    },

    "html": {
      "src": "source",
      "dest": "./",
      "extensions": ["html", "erb", "haml", "md", "yml"],
      "excludeFolders": ["images", "javascripts", "stylesheets"]
    },

    "images": {
      "src": "source/assets/images",
      "dest": "assets/images",
      "extensions": ["jpg", "png", "svg", "gif"]
    },

    "fonts": {
      "src": "source/assets/fonts",
      "dest": "assets/fonts",
      "extensions": ["woff2", "woff", "eot", "ttf", "svg"]
    }
  }
}
