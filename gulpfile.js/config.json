{
  "root": {
    "src": ".",
    "dest": "./.tmp"
  },

  "tasks": {
    "browserSync": {
      "proxy": "http://localhost:4567",
      "reloadDelay" : 1000,
      "files": ["./source/**/*.{erb,html,haml}"]
    },

    "static": {
      "src": "source/assets",
      "dest": "./"
    },

    "js": {
      "src": "lib/chef-lab-client/src",
      "dest": "javascripts",
      "entries": {
        "polyfills": ["./polyfills.ts"],
        "main": ["./main.ts"]
      }
    },
    "css": {
      "src": "source/assets/stylesheets",
      "dest": "stylesheets",
      "autoprefixer": {
        "browsers": ["last 3 version"]
      },
      "sass": {
        "indentedSyntax": false,
        "includePaths": [],
        "precision": 10
      },
      "extensions": ["sass", "scss", "css"]
    },

    "html": {
      "src": "source",
      "dest": "./",
      "extensions": ["html", "erb", "haml", "md", "yml"],
      "excludeFolders": ["images", "javascripts", "stylesheets"]
    },

    "images": {
      "src": "source/assets/images",
      "dest": "images",
      "extensions": ["jpg", "png", "svg", "gif"]
    },

    "fonts": {
      "src": "source/assets/fonts",
      "dest": "fonts",
      "extensions": ["woff2", "woff", "eot", "ttf", "svg"]
    }
  }
}
