#!/bin/sh
if [ "$TRAVIS_BRANCH" = "release" ]; then
  bundle exec middleman invalidate
elif [ "$TRAVIS_BRANCH" = "beta" ]; then
  export CLOUDFRONT_DISTRIBUTION_ID=$BETA_CLOUDFRONT_DISTRIBUTION_ID
  bundle exec middleman invalidate
else
  echo "Not running in Travis CI and/or not on the release branch. Skipping CloudFront invalidation."
fi
