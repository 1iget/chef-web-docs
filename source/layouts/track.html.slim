= wrap_layout :layout do
  = yield
  .track-hero
    .row
      h1.head
        = current_page.data.title
        .tag-img
          img src="/assets/images/tracks/bakedfresh.png"
  .row
    .breadcrumbs
      a aria-controls="drop1" aria-expanded="false" data-dropdown="drop1"
        h5 Tracks
        span Infrastructure Automation Basics
      ul#drop1.f-dropdown aria-hidden="true" data-dropdown-content="" tabindex="-1"
        li
