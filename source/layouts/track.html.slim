    - get_track(current_page).modules.each_with_index do |module_id, index|
      - module_obj = get_module_by_id(module_id)
      .row
        .large-card.large-12.medium-12.small-12.large-centered.medium-centered.columns
          .head class="#{current_page.data.track_class}"
            = index + 1
            | &nbsp;
            = module_obj.page.data.title
            user-module-progress module="#{module_id}"
          .row
            .columns.large-8.medium-8.desc
              p
                = module_obj.page.data.description
              - if module_obj.page.data.video_url
                a.video-url url="#{module_obj.page.data.video_url}"  Watch the intro video
            .columns.large-4.medium-4.btn-wrap
              a.button.btn-primary.user-start-btn href="#{module_obj.page.url}" module="#{module_id}" Start
              ul.links
                li
                  a href=""
                    = module_obj.page.data.level
